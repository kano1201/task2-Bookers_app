<h1>Editing Book</h1> <!-- 編集画面 -->
<div class="edit_text">
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
 <h4>Title:</h4>
  <%= f.text_field :title %>
  <h4>Body:</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %> <!--Update成功したらサクセス表示、編集時に空白ならエラー表示-->
<% end %>
</div>

<div>
  <p class="show_button2"><%= link_to "Show", book_path(@book.id) %></p>
  <p class="back_button"><%= link_to "Back", books_path(@book) %></p>
</div>