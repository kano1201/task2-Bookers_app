<h1>Editing Book</h1> <!-- 編集画面 -->
<div class="edit_text">
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title:</h4>
  <%= f.text_field :title %>
  <h4>Body:</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
</div>

<div>
  <p class="show_button2"><%= link_to "Show", book_path(@book.id) %></p>
  <p class="back_button"><%= link_to "Back", book_path(@book) %></p><!-- Backで一覧画面に飛ばないなんで -->
</div>